<?xml version="1.0" encoding="ISO-8859-1"?>
<!--Sentience 3D Perception System-->
<Sentience>
  <StereoCamera>
    <!--Name of the camera device-->
    <DeviceName>Webcam stereo camera</DeviceName>
    <!--Supplier of the camera device-->
    <SupplierName>Surveyor Corporation</SupplierName>
    <!--Part number of the camera device-->
    <PartNumber>
    </PartNumber>
    <!--Serial number of the camera device-->
    <SerialNumber>
    </SerialNumber>
    <!--Dimensions of the images in pixels-->
    <ImageDimensions>320x240</ImageDimensions>
    <!--Focal length in millimetres-->
    <FocalLengthMillimetres>3.6</FocalLengthMillimetres>
    <!--Sensor density in pixels per millimetre-->
    <SensorDensityPixelsPerMillimetre>307</SensorDensityPixelsPerMillimetre>
    <!--Camera baseline distance in millimetres-->
    <BaselineMillimetres>100</BaselineMillimetres>
    <!--Calibration Data-->
    <Calibration>
      <!--Image offsets in pixels due to small missalignment from parallel-->
      <Offsets>-8 0</Offsets>
      <!--Rotation of the right image relative to the left in degrees-->
      <RelativeRotationDegrees>0</RelativeRotationDegrees>
      <!--Scale of the right image relative to the left-->
      <RelativeImageScale>1</RelativeImageScale>
      <!--Disable all rectification-->
      <DisableRectification>True</DisableRectification>
      <!--Disable radial correction, and use offsets and scale/rotation only-->
      <DisableRadialCorrection>True</DisableRadialCorrection>
      <Camera>
        <!--Horizontal field of view of the camera in degrees-->
        <FieldOfViewDegrees>90</FieldOfViewDegrees>
        <!--The centre of distortion in pixels-->
        <CentreOfDistortion>0 0</CentreOfDistortion>
        <!--Polynomial coefficients used to describe the camera lens distortion-->
        <DistortionCoefficients>0</DistortionCoefficients>
        <!--The minimum RMS error between the distortion curve and plotted points-->
        <RMSerror>Infinity</RMSerror>
        <!--Scaling factor-->
        <Scale>1</Scale>
      </Camera>
      <Camera>
        <!--Horizontal field of view of the camera in degrees-->
        <FieldOfViewDegrees>90</FieldOfViewDegrees>
        <!--The centre of distortion in pixels-->
        <CentreOfDistortion>0 0</CentreOfDistortion>
        <!--Polynomial coefficients used to describe the camera lens distortion-->
        <DistortionCoefficients>0</DistortionCoefficients>
        <!--The minimum RMS error between the distortion curve and plotted points-->
        <RMSerror>Infinity</RMSerror>
        <!--Scaling factor-->
        <Scale>1</Scale>
      </Camera>
    </Calibration>
  </StereoCamera>
</Sentience>